<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <div>Airline: </div>
    <div><%= flight.airline %></div>
    <div>Airport: </div>
    <div><%= flight.airport %></div>
    <div>Flight Number: </div>
    <div><%= flight.flightNo %></div>
    <div>Departs: </div>
    <div><%= flight.departs %></div>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flights</button>
    </a>
  </section>
  <h2>Add Ticket</h2>
  <form 
  id="add-ticket"
  action="/flights/<%= flight._id %>/tickets"
  method="POST"
>
  <label for="seat-input">Seat #</label>
  <input type="text" name="seat" id="seat-input">
  <label for="price-input">Price:</label>
  <input type="text" name="price" id="price-input">
  <button type="submit">Add Ticket</button>
</form>
<% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Seat</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %> 
      <% flight.tickets.forEach(function(ticket) { %>
        <% total += ticket.price %>
        <tr>
          <td><%= ticket.seat %></td>
          <td>$<%= ticket.price %></td>
          <td>
            <form action="/flights/<%= flight._id %>/tickets/<%= ticket._id %>?_method=DELETE" method="POST">
              <button>X</button>
            </form>
          </td>
        </tr>
      <% }) %>
      <tr>
        <td colspan="2"></td>
        <td>
          <strong><%= (total / flight.tickets.length).toFixed(1) %></strong>
        </td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h3>No tickets Yet</h3>
<% } %>
</main>
  
<%- include('../partials/footer') %>
